<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:background="@color/background"
    android:clickable="true"
    android:layout_height="wrap_content"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:padding="10dp">
        <!--items for a single row of RecyclerView-->

        <TextView
            android:id="@+id/Recipe_title_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/background"
            android:clickable="true"
            android:fontFamily="@font/trader_joes"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Name"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:focusable="true" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:layout_width="236dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/trader_joes"
            android:text="Directions"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/Recipe_directions_Textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:text="e9999999999"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_viewIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/trader_joes"
            android:text="Ingredients"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Recipe_ingredients_Textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:text="e9999999999"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>